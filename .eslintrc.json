{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "all",
                "singleQuote": true,
                "arrowParens": "always"
            }
        ],
        "curly": ["error", "multi-line"]
    }
}
